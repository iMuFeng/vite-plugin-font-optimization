{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "extends": [
    "airbnb-typescript",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:jest/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint",
    "jest",
    "import"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "rules": {
    "@typescript-eslint/no-unused-expressions": "off",
    "import/no-unresolved": "error",
    "prettier/prettier": "error"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "."
      },
      "node": {
        "extensions": [
          ".ts"
        ],
        "moduleDirectory": [
          "node_modules",
          "."
        ]
      }
    }
  }
}
